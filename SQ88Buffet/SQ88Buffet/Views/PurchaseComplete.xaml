<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQ88Buffet.Views.PurchaseComplete"
             Title="Done!"
             x:Name="PurComp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Purchases has completed successfully."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Large" />
            <Button x:Name="BtnDrinks" Text="Go main page" Command="{Binding Source={x:Reference PurComp}, 
                    Path=BindingContext.GoMainPage}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>